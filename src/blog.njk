---
layout: layout.njk
title: Blog a videá
---
<section><div class="container">
<h2>Články</h2>
{% for post in collections.posts %}
<article class="card" style="margin-bottom:12px">
<h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
<p class="small">{{ post.date | date('dd.MM.yyyy') }}</p>
<p>{{ post.data.description }}</p>
<a class="btn" href="{{ post.url }}">Čítať</a>
</article>
{% endfor %}
<h2>Videá</h2>
{% for v in collections.videos %}
<article class="card" style="margin-bottom:12px">
<h3><a href="{{ v.url }}">{{ v.data.title }}</a></h3>
<p class="small">{{ v.date | date('dd.MM.yyyy') }}</p>
<a class="btn" href="{{ v.url }}">Pozrieť</a>
</article>
{% endfor %}
</div></section>
